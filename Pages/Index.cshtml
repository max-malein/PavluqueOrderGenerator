@page
@model PavluqueOrderGenerator.Pages.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1 class="display-4">Велком ту зе павлюк ордер генератор!</h1>

<p>
    <a asp-page="CreateOrder">Создать новый заказ</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Номер заказа
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SavedOrder[0].DateCreated)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SavedOrder[0].LastEdited)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.SavedOrder) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateCreated)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastEdited)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
